<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="InMotion Hosting Automation Test Suite" verbose="1">

    <!-- Suite-level parameters -->
    <parameter name="browser" value="chrome"/>

    <!-- Test 1: Home Page Tests -->
    <test name="1. Home Page Verification Tests" preserve-order="true">
        <classes>
            <class name="Testcases.TC01_HomePageTest">
                <methods>
                    <include name="testHomePageLoad"/>
                    <include name="SearchforaDomain"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Test 2: Domain Search Tests -->
    <test name="2. Domain Search Tests" preserve-order="true">
        <classes>
            <class name="Testcases.TC02_DomainSearchTest">
                <methods>
                    <include name="testSearchAvailableAndAddDomain"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Test 3: Cart Management Tests -->
    <test name="3. Cart Management Tests" preserve-order="true">
        <classes>
            <class name="Testcases.TC03_CartManagementTest">
                <methods>
                    <include name="testAddDomainToCart"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Test 4: Hosting Plan Tests -->
    <test name="4. Hosting Plan Tests" preserve-order="true">
        <classes>
            <class name="Testcases.TC04_HostingPlanTest">
                <methods>
                    <include name="testAddHostingPlan"/>
                    <include name="testUpdateHostingPlan"/>
                    <include name="testFinalCartVerification"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>